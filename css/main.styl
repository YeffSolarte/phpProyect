body
  font-size 12px
.navHome
  width 100%
  display block
  & > nav
    width 100%
    background rgba(25,36,47,.5)
    & > ul
      width 100%
      padding 0
      display table
      margin 0
      & > li
        display table-cell
        border-right 2px solid white
        height 3em
        line-height 3em
        text-align center
        -webkit-transition: all 300ms ease-out;
        -moz-transition: all 300ms ease-out;
        -o-transition: all 300ms ease-out;
        transition: all 300ms ease-out;
        &:hover
          background rgb(25,36,47)
        &:last-child
          border-right none
        & > a
          text-decoration none
          color white
          padding 1em 2em
          font-size 1.3em


.onMenuSection
  width 100%
  height calc(100vh - 3.1em)